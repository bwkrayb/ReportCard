<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.brandonkraybill.reportcard.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report Card!" />

        <EditText
            android:id="@+id/fname_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"/>

        <EditText
            android:id="@+id/lname_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Chemistry: " />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="chem_increase"
                android:text="+"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="chem_decrease"
                android:text="-"/>

            <TextView
                android:id="@+id/chemistry_text_view"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="B" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Math:" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="math_increase"
                android:text="+"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="math_decrease"
                android:text="-"/>

            <TextView
                android:id="@+id/math_text_view"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="B" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="History: " />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="history_increase"
                android:text="+"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="history_decrease"
                android:text="-"/>

            <TextView
                android:id="@+id/history_text_view"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="B" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="English: " />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="english_increase"
                android:text="+"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="english_decrease"
                android:text="-"/>

            <TextView
                android:id="@+id/english_text_view"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="B" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Biology: " />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="bio_increase"
                android:text="+"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="bio_decrease"
                android:text="-"/>

            <TextView
                android:id="@+id/biology_text_view"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="B" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="submit"
                android:onClick="displayMessage"/>

        </LinearLayout>

        <TextView
            android:id="@+id/grade_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"/>

    </LinearLayout>

</ScrollView>